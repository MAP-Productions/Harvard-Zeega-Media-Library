{% block stylesheets %}
	<script type="text/javascript">
		window.localStorage.clear();
	</script>
	
	<link rel="shortcut icon" type="image/x-icon" href="http://zeega.org/images/zeega.ico"> 
	
	<!-- DEV ONLY This block is for less to clear its stupid cache. Take out in production -->
	<script type="text/javascript">
		window.localStorage.clear();
	</script>
	<!-- end DEV ONLY -->

	<style type="text/css">
	
		/*
			Background image code lives here, not in CSS, because this is specific to each page
			and could be made dynamic too (i.e. randomly picking a different image each load)
			quite easily. Exposing the code here should be helpful.
		*/
	
		html { 
		
		background: url({{asset("images/background.jpg")}}) no-repeat center center fixed; 
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
		}
	
	</style>

	<link rel="stylesheet/less" type="text/css" href="{{ asset('css/less/community/bootstrap.less')}}">

	<link href='http://fonts.googleapis.com/css?family=Podkova:400,700' rel='stylesheet' type='text/css'> <!-- Including Google's Font -->
	<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700' rel='stylesheet' type='text/css'>
	<script type="text/javascript" language="Javascript" src="{{ asset('js/lib/less-1.3.0.min.js') }}"></script>
	
{% endblock stylesheets %}
<!-- Background Color Div - creates the transparent layer over the background image -->
	<div id="background-color-lightest">
	</div>
	<!-- Background Color Div ends -->
<!-- Page Content Begins -->
	
	<div class="container sign-in">
	
				<div class='sign-in-head'>
					<a class="brand" href="{{path('ZeegaCommunityBundle_home')}}"><img src="{{ asset('images/HELP_Globe_home.png') }}" alt="zeega-logo-large"></a>
				</div>
				<h2 class='message'>Forgot your password? Enter your email below and we'll send you a link to reset your password.</h2>
				<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-vertical">
				    <div>
				        {% if invalid_username is defined %}
				            <h2 style="color:yellow">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</h2>
				        {% endif %}
				        <h4>Email Address</h4>
				        <div class="controls" style="margin-bottom:0">
				        	<input type="text" id="username" name="username" class="input-xlarge" style='width:100%'/>
				    	</div>
				    </div>
				    <div>
				    	<button type="submit" class="btn btn-success btn-custom" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}"><h4>Submit</h4></button>
				        <!--<input class="btn btn-success btn-custom" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />-->
				    </div>
				</form>
	
	</div>


